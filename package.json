{
  "private": true,
  "scripts": {
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:ts": "TEST_ENV=jest jest --runInBand --config ./jest.e2e.config.js",
    "build:dev": "rollup -c",
    "build": "rollup -c --environment BUILD:production",
    "prepublishOnly": "npm run build",
    "release": "pnpm recursive --filter ./packages exec npm version",
    "postrelease": "pnpm run build && pnpm recursive --filter ./packages publish --access public --tag latest"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "jest": "^25.3.0",
    "jest-expect-message": "^1.0.2",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.3.4",
    "rollup-plugin-dts": "^1.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "version": "0.1.0-alpha.0"
}
